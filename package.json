{
    "name": "minesweeper",
    "version": "1.3.0",
    "description": "Can change the number of columns/lines/mines, and has an independent high-score for each combination.",
    "dependencies": {
        "easeljs": "^1.0.2",
        "preloadjs": "^1.0.1"
    },
    "devDependencies": {
        "@types/createjs": "^0.0.29",
        "grunt": "^1.0.3",
        "grunt-contrib-clean": "^2.0.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-contrib-cssmin": "^3.0.0",
        "http-server": "^0.11.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.16.4",
        "typescript": "^3.3.3333"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:typescript": "tsc -w",
        "dev:update_libraries": "grunt update_libraries",
        "dev:server": "http-server -p 8000",
        "build": "grunt",
        "formatting:check": "prettier --check \"**/*.{html,css,json,js,ts,md}\"",
        "formatting:run": "prettier --write \"**/*.{html,css,json,js,ts,md}\""
    }
}
